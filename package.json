  "repository": {
    "type": "git",
    "url": "git+https://github.com/DenysVuika/react-lib.git"
  },
  "keywords": [
    "react",
    "library"
  ],
  "author": {
    "name": "Denys Vuika",
    "email": "denys.vuika@gmail.com",
    "url": "https://denys.dev"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/DenysVuika/react-lib/issues"
  },
  "homepage": "https://github.com/DenysVuika/react-lib#readme",
  "devDependencies": {
    "@size-limit/preset-small-lib": "^4.5.0",
    "@testing-library/jest-dom": "^5.10.1",
    "@testing-library/react": "^10.2.1",
    "@types/jest": "^26.0.0",
    "@types/react": "^16.9.36",
    "@types/react-dom": "^16.9.8",
    "@typescript-eslint/eslint-plugin": "^3.2.0",
    "@typescript-eslint/parser": "^3.2.0",
    "eslint": "^7.2.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-react": "^7.20.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^26.0.1",
    "prettier": "^2.0.5",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "rollup": "^2.16.1",
    "rollup-plugin-copy": "^3.3.0",
    "rollup-plugin-delete": "^2.0.0",
    "rollup-plugin-generate-package-json": "^3.2.0",
    "rollup-plugin-postcss": "^3.1.8",
    "rollup-plugin-terser": "^6.1.0",
    "rollup-plugin-typescript2": "^0.27.1",
    "size-limit": "^4.5.0",
    "ts-jest": "^26.1.0",
    "typescript": "^3.9.5"
  },
  "config": {
    "lib": {
      "peerDependencies": {
        "react": "^16.13.1",
        "react-dom": "^16.13.1",
        "typescript": "^3.9.5"
      }
    }
  },
  "size-limit": [
    {
      "path": "dist/react-lib.cjs.js",
      "limit": "1 KB",
      "webpack": false
    },
    {
      "path": "dist/react-lib.esm.js",
      "limit": "1 KB",
      "webpack": false
    },
    {
      "path": "dist/react-lib.umd.js",
      "limit": "1 KB",
      "webpack": false
    }
  ]
